extends ../layout/index
block contenido 
    main.container.mt-5
        .row
            .col-md-5
                img.img-fluid(src=`/img/destinos_${Viajes.imagen}_ln.jpg`,  alt="viajes")
            .col-md-7
                h2= Viajes.titulo 
                p
                        i.fas.fa-calendar-alt 
                        |  fecha de ida:   #{Viajes.fecha_ida} - fecha de vuelta: #{Viajes.fecha_vuelta}
                p
                        i.fas.fa-dollar-sign 
                        |  #{Viajes.precio}
                p
                        i.fas.fa-users 
                        |  #{Viajes.disponibles} disponibles
                p.text-dark= Viajes.descripcion